<%- include ('partials/_header')  %>

<div class="container">
    <div class="row mt-1">
       <div class="col-md-9">
        <table class="table table-bordered table-hover">
           <thead>
               <tr>
                   <th>mÂ°</th>
                   <th>Nombre</th>
                   <th>Cantidad</th>
                   <th>Unidades</th>
                   <th>FechaVencimiento</th>
                   <th>Tipo</th>
                   <th>Lote</th>
                   <th>INVIMA</th>
                   <th>Actions</th>
               </tr>
           </thead> 
           <tbody>
            <% if(data){ %>
                <% for (var i = 0; i< data.length; i++){  %>
                    <tr>
                        <td> <%= i+1 %></td>
                        <td><%= data[i].nombre %> </td>
                        <td><%= data[i].cantidad %> </td>
                        <td><%= data[i].unidades %> </td>
                        <td><%= data[i].fechaVencimiento %> </td>
                        <td><%= data[i].tipo %> </td>
                        <td><%= data[i].lote %> </td>
                        <td><%= data[i].invima %> </td>
                        <td>
                            <a href="/delete/<%= data[i].id%>" class="btn btn-danger"> Eliminar</a>
                            <a href="/update/<%= data[i].id%>" class="btn btn-info">  Editar  </a>
                        </td>
                    </tr>
                <% } %>    
            <% } %> 
           </tbody>
        </table>
       </div>
       <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <form action="/add" method="post">
                    <div class = "form-group">
                        <input type="text" name="nombre" placeholder="Nombre" class="form-control">
                    </div>
                    <div class = "form-group">
                        <input type="text" name="cantidad" placeholder="Cantidad" class="form-control">
                    </div>
                    <div class = "form-group">
                        <input type="text" name="unidades" placeholder="Unidades" class="form-control">
                    </div>
                    <div class = "form-group">
                        <input type="text" name="fechaVencimiento" placeholder="FechaVencimiento" class="form-control">
                    </div>
                    <div class = "form-group">
                        <input type="text" name="tipo" placeholder="Tipo" class="form-control">
                    </div>
                    <div class = "form-group">
                        <input type="text" name="lote" placeholder="Lote" class="form-control">
                    </div>
                    <div class = "form-group">
                        <input type="text" name="invima" placeholder="INVIMA" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Guardar Producto
                    </button>
                </form>
            </div>
        </div>
       </div> 
    </div>
</div>

<%- include ('partials/_footer')  %>