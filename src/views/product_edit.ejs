<%- include ('partials/_header')  %>

<div class="container mt-5">
    <div class="row">
        <div class=" cold-md.5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post">
                        <div class = "form-group">
                            <input type="text" name="nombre"  value="<%= data.nombre %>" class="form-control">
                        </div>
                        <div class = "form-group">
                            <input type="text" name="cantidad"value="<%= data.cantidad %>" class="form-control">
                        </div>
                        <div class = "form-group">
                            <input type="text" name="unidades" value="<%= data.unidades %>" class="form-control">
                        </div>
                        <div class = "form-group">
                            <input type="text" name="fechaVencimiento" value="<%= data.fechaVencimiento %>" class="form-control">
                        </div>
                        <div class = "form-group">
                            <input type="text" name="tipo" value="<%= data.tipo %>" class="form-control">
                        </div>
                        <div class = "form-group">
                            <input type="text" name="lote" value="<%= data.lote %>" class="form-control">
                        </div>
                        <div class = "form-group">
                            <input type="text" name="invima" value="<%= data.invima %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Editar Producto
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer')  %>